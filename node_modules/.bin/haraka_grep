#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir//usr/bin/perl" ]; then
  "$basedir//usr/bin/perl"  -w "$basedir/../Haraka/bin/haraka_grep" "$@"
  ret=$?
else 
  /usr/bin/perl  -w "$basedir/../Haraka/bin/haraka_grep" "$@"
  ret=$?
fi
exit $ret
